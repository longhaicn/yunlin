<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/shape_rectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:hint="@string/keyword"
            android:layout_toLeftOf="@+id/iv_search"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="50dp"
            android:layout_margin="1dp"
            android:src="@drawable/search_icon"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/iv_search_category"
            android:layout_toLeftOf="@+id/iv_search_category"
            android:layout_toStartOf="@+id/iv_search_category" />
        <ImageView
            android:id="@+id/iv_search_category"
            android:src="@drawable/btn_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/et_search"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_query"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>